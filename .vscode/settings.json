{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Useful for monorepos or TS projects:
  "eslint.workingDirectories": [{ "mode": "auto" }],

  "eslint.run": "onSave",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // (optional) to see more verbose info when debugging
  "eslint.debug": true
}
